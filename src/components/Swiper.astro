---
// Swiper.astro
const { images } = Astro.props;
import Swiper from "swiper";
import Arrow from "@/assets/svg/Arrow.svg";
import "swiper/css";
---

<div class="swiper relative">
  <div class="swiper-wrapper my-4">
    <slot />
  </div>
</div>
<div
  class="swiper-button-container -gap-4 pointer-events-none absolute -top-10 right-0 left-0 z-10 hidden w-full flex-row justify-end pr-4 md:flex md:gap-4"
>
  <button
    class="swiper-button-prev pointer-events-auto rotate-180 cursor-pointer hover:opacity-30"
  >
    <Arrow />
  </button>
  <button
    class="swiper-button-next pointer-events-auto cursor-pointer hover:opacity-30"
  >
    <Arrow />
  </button>
</div>
